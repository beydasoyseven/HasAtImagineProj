<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    tools:context=".agriculturalistPart.AgricultMainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="421dp"
        android:layout_height="236dp"
        app:layout_constraintBottom_toTopOf="@+id/flowerLin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ruzgarLin"
            android:layout_width="87dp"
            android:layout_height="58dp"
            android:layout_marginStart="344dp"
            android:background="@drawable/raindrop"
            android:orientation="horizontal"
            android:rotation="270"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.82"></LinearLayout>

        <LinearLayout
            android:id="@+id/rutubetLin"
            android:layout_width="87dp"
            android:layout_height="58dp"
            android:background="@drawable/raindrop"
            android:orientation="horizontal"
            android:rotation="150"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.775"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.82">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/yagmurLin"
            android:layout_width="87dp"
            android:layout_height="58dp"
            android:background="@drawable/raindrop"
            android:orientation="horizontal"
            android:rotation="190"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonLin"
            app:layout_constraintHorizontal_bias="0.934"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.494"></LinearLayout>

        <LinearLayout
            android:id="@+id/dereceLin"
            android:layout_width="87dp"
            android:layout_height="58dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/raindrop"
            android:orientation="horizontal"
            android:rotation="220"
            app:layout_constraintBottom_toTopOf="@+id/yagmurLin"
            app:layout_constraintEnd_toStartOf="@+id/buttonLin"
            app:layout_constraintHorizontal_bias="0.934"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"></LinearLayout>

        <LinearLayout
            android:id="@+id/buttonLin"
            android:layout_width="114dp"
            android:layout_height="108dp"
            android:background="@drawable/firsatlarbutton"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.947"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.125">

            <Button
                android:id="@+id/button"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/yeloow"
                android:gravity="center"
                android:text="Haberler ve Fırsatlar"
                android:textSize="10dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/flowerLin"
        android:layout_width="355dp"
        android:layout_height="319dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.592">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/HastalıkButton"
                android:layout_width="14dp"
                android:layout_height="110dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:background="@drawable/buttonhasta"
                android:text="Hastalık Tespit" />

            <Button
                android:id="@+id/urunEkimButton"
                android:layout_width="14dp"
                android:layout_height="110dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="-8dp"
                android:layout_weight="1"
                android:background="@drawable/buttonurun"
                android:text="Ürün Ekim" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/satisaGonderButton"
                android:layout_width="14dp"
                android:layout_height="110dp"
                android:layout_gravity="top"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:background="@drawable/buttonsatis"
                android:text="Satışa Gönder" />

            <Button
                android:id="@+id/hakkındabutton"
                android:layout_width="14dp"
                android:layout_height="110dp"
                android:layout_gravity="top"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="-8dp"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:background="@drawable/buttonhakkinda"
                android:backgroundTint="@color/white"
                android:text="Uzmanla Görüş" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="11dp"
        android:layout_height="240dp"
        android:layout_weight="1"
        android:background="@color/darkgreen"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/flowerLin"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/flowerLin"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="1.0">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/barLin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/bildirimlerLin"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_notifications_24" />

                <TextView
                    android:id="@+id/button2"
                    android:layout_width="70dp"
                    android:layout_height="48dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Bildirimler" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/searchLin"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_search_24" />

                <TextView
                    android:id="@+id/button3"
                    android:layout_width="70dp"
                    android:layout_height="48dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Ara" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hesabımLin"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_account_circle_24" />

                <TextView
                    android:id="@+id/button5"
                    android:layout_width="70dp"
                    android:layout_height="48dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Hesabım" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ayarlarLin"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_settings_24" />

                <TextView
                    android:id="@+id/button4"
                    android:layout_width="70dp"
                    android:layout_height="48dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Ayarlar" />
            </LinearLayout>

        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>