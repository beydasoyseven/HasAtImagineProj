<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="491dp"
        android:layout_height="247dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/agriculturalistButton"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="46dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttonmain"
            android:gravity="center"
            android:text="ÜRETİCİ GİRİŞİ"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/customerButton"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="14dp"
            android:background="@drawable/buttonmain"
            android:text="MÜŞTERİ GİRİŞİ"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="487dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:src="@drawable/farm" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
